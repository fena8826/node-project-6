<%- include('header') %>


<style>
body {
    background: linear-gradient(135deg, #e8f0fe, #f8f9fa);
    font-family: 'Poppins', sans-serif;
}

.page-wrapper {
    padding: 30px;
}


.card {
    background: rgba(255, 255, 255, 0.95);
    border: none;
    border-radius: 18px;
    box-shadow: 0 5px 25px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
}

.card:hover {
    transform: scale(1.01);
    box-shadow: 0 8px 30px rgba(0,0,0,0.15);
}


.card-title {
    color: #2f3e9e;
    font-weight: 600;
    font-size: 22px;
    text-transform: capitalize;
}


.control-label {
    font-weight: 600;
    color: #444;
}

.form-control {
    border-radius: 8px;
    border: 1px solid #d1d9e6;
    box-shadow: inset 0 1px 3px rgba(0,0,0,0.05);
    transition: all 0.3s ease;
}

.form-control:focus {
    border-color: #2f3e9e;
    box-shadow: 0 0 8px rgba(47,62,158,0.3);
}

.custom-file-input:focus ~ .custom-file-label {
    border-color: #2f3e9e;
    box-shadow: 0 0 8px rgba(47,62,158,0.2);
}

.custom-file-label::after {
    background-color: #2f3e9e;
    color: #fff;
    border-left: 1px solid #2f3e9e;
}


.btn-primary {
    background: linear-gradient(90deg, #2f3e9e, #667eea);
    border: none;
    border-radius: 8px;
    padding: 10px 25px;
    font-weight: 600;
    box-shadow: 0 4px 10px rgba(47,62,158,0.2);
    transition: all 0.3s ease;
}

.btn-primary:hover {
    background: linear-gradient(90deg, #23338c, #556cd6);
    transform: translateY(-2px);
    box-shadow: 0 6px 15px rgba(47,62,158,0.25);
}


.page-title {
    font-weight: 600;
    color: #2f3e9e;
}

.breadcrumb {
    background: none;
    font-size: 14px;
}

.breadcrumb-item a {
    color: #2f3e9e;
    text-decoration: none;
}

.breadcrumb-item.active {
    color: #555;
}


@media (max-width: 768px) {
    .card {
        margin-bottom: 20px;
    }
    .card-body {
        padding: 20px;
    }
}
</style>

<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Form Basic</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Library</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <form class="form-horizontal" action="/user/edit-user/<%= user.id %>" method="post" enctype="multipart/form-data">
                        <div class="card-body">
                            <h4 class="card-title">Edit Personal Info</h4>

                            <div class="form-group row">
                                <label for="fname" class="col-sm-3 text-right control-label col-form-label">First Name</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="fname" name="firstname" value="<%= user.firstname %>" placeholder="First Name Here">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="lname" class="col-sm-3 text-right control-label col-form-label">Last Name</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="lname" name="lastname" value="<%= user.lastname %>" placeholder="Last Name Here">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="email" class="col-sm-3 text-right control-label col-form-label">Email</label>
                                <div class="col-sm-9">
                                    <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" placeholder="Enter your Email">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="password" class="col-sm-3 text-right control-label col-form-label">Password</label>
                                <div class="col-sm-9">
                                    <input type="password" class="form-control" id="password" name="password" value="<%= user.password %>" placeholder="Password Here">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 text-right control-label col-form-label">Gender</label>
                                <div class="col-md-9">
                                    <div class="custom-control custom-radio">
                                        <input type="radio" class="custom-control-input" id="male" name="gender" value="Male" <% if(user.gender == 'Male') { %> checked <% } %> >
                                        <label class="custom-control-label" for="male">Male</label>
                                    </div>
                                    <div class="custom-control custom-radio">
                                        <input type="radio" class="custom-control-input" id="female" name="gender" value="Female" <% if(user.gender == 'Female') { %> checked <% } %> >
                                        <label class="custom-control-label" for="female">Female</label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 text-right control-label col-form-label">Hobbies</label>
                                <div class="col-md-9">
                                    <div class="custom-control custom-checkbox mr-sm-2">
                                        <input type="checkbox" class="custom-control-input" name="hobbies[]" value="Music" <% if(user.hobbies.includes('Music')) { %> checked <% } %> id="hobby1">
                                        <label class="custom-control-label" for="hobby1">Music</label>
                                    </div>
                                    <div class="custom-control custom-checkbox mr-sm-2">
                                        <input type="checkbox" class="custom-control-input" name="hobbies[]" value="Adventure" <% if(user.hobbies.includes('Adventure')) { %> checked <% } %> id="hobby2">
                                        <label class="custom-control-label" for="hobby2">Adventure</label>
                                    </div>
                                    <div class="custom-control custom-checkbox mr-sm-2">
                                        <input type="checkbox" class="custom-control-input" name="hobbies[]" value="Reading" <% if(user.hobbies.includes('Reading')) { %> checked <% } %> id="hobby3">
                                        <label class="custom-control-label" for="hobby3">Reading</label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 text-right control-label col-form-label">File Upload</label>
                                <div class="col-md-9">
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input" name="image" id="validatedCustomFile">
                                        <label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="border-top">
                            <div class="card-body">
                                <button type="submit" class="btn btn-primary">Update User</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('footer') %>
