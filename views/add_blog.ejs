<%- include('header') %>


<style>
body {
    background: linear-gradient(135deg, #e8f0fe, #f8f9fa);
    font-family: 'Poppins', sans-serif;
}

.page-wrapper {
    padding: 30px;
}


.card {
    background: rgba(255, 255, 255, 0.95);
    border: none;
    border-radius: 18px;
    box-shadow: 0 5px 25px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
}

.card:hover {
    transform: scale(1.01);
    box-shadow: 0 8px 30px rgba(0,0,0,0.15);
}


.card-title {
    color: #2f3e9e;
    font-weight: 600;
    font-size: 22px;
    text-transform: capitalize;
}


.control-label {
    font-weight: 600;
    color: #444;
}


.form-control {
    border-radius: 8px;
    border: 1px solid #d1d9e6;
    box-shadow: inset 0 1px 3px rgba(0,0,0,0.05);
    transition: all 0.3s ease;
}

.form-control:focus {
    border-color: #2f3e9e;
    box-shadow: 0 0 8px rgba(47,62,158,0.3);
}


.custom-file-input:focus ~ .custom-file-label {
    border-color: #2f3e9e;
    box-shadow: 0 0 8px rgba(47,62,158,0.2);
}

.custom-file-label::after {
    background-color: #2f3e9e;
    color: #fff;
    border-left: 1px solid #2f3e9e;
}


.btn-primary {
    background: linear-gradient(90deg, #2f3e9e, #667eea);
    border: none;
    border-radius: 8px;
    padding: 10px 25px;
    font-weight: 600;
    box-shadow: 0 4px 10px rgba(47,62,158,0.2);
    transition: all 0.3s ease;
}

.btn-primary:hover {
    background: linear-gradient(90deg, #23338c, #556cd6);
    transform: translateY(-2px);
    box-shadow: 0 6px 15px rgba(47,62,158,0.25);
}


.page-title {
    font-weight: 600;
    color: #2f3e9e;
}

.breadcrumb {
    background: none;
    font-size: 14px;
}

.breadcrumb-item a {
    color: #2f3e9e;
    text-decoration: none;
}

.breadcrumb-item.active {
    color: #555;
}


@media (max-width: 768px) {
    .card {
        margin-bottom: 20px;
    }
    .card-body {
        padding: 20px;
    }
}
</style>

<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Add Blog</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Add Blog</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card">
                    <form class="form-horizontal" action="/blog/add-blog" method="post" enctype="multipart/form-data">
                        <div class="card-body">
                            <h4 class="card-title">Blog Details</h4>
                            <div class="form-group row">
                                <label class="col-sm-3 text-right control-label col-form-label">Title</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" name="title" placeholder="Enter Blog Title">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 text-right control-label col-form-label">Content</label>
                                <div class="col-sm-9">
                                    <textarea class="form-control" name="content" rows="5" placeholder="Write your blog content here..."></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 text-right control-label col-form-label">Category</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" name="category" placeholder="Enter Blog Category">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 text-right control-label col-form-label">Language</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" name="language" placeholder="Enter Language">
                                </div>
                            </div>
                            
                            <div class="form-group row">
                                <label class="col-sm-3 text-right control-label col-form-label">Upload Image</label>
                                <div class="col-sm-9">
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input" name="image" id="validatedCustomFile">
                                        <label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="border-top">
                            <div class="card-body text-center">
                                <button type="submit" class="btn btn-primary">Add Blog</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('footer') %>
